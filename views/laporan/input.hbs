    <!-- Content -->
    <div class="flex-8 bg-gray-200 h-screen overflow-y-auto">
      <!-- Navbar Content -->
      <div class="flex justify-between items-center bg-white shadow p-4 sticky top-0 left-0 right-0">
        <a href="javascript:void(0)" class="flex flex-col" id="togle-nav">
          <span class="w-4 line-h-nav bg-black rounded-lg"></span>
          <span class="w-4 line-h-nav bg-black rounded-lg my-1"></span>
          <span class="w-2 line-h-nav bg-black rounded-lg"></span>
        </a>
        <a onclick="return confirm('Apakah Anda Yakin Ingin Log Out?')" href="{{base_url}}Auth/logout">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
        </a>
      </div>
      <!-- Content Body -->
      <div class="m-5">
        <!-- Head Body -->
        <p class="font-bold text-xl text-gray-700">INPUT DATA LAPORAN</p>
        <!-- Body Body -->
        <div class="bg-white rounded mt-5 p-4 shadow-md">
          
          <form action="{{base_url}}store" method="POST">
            <div>
              <label class="font-bold">Nama Pelanggan :</label>
              <input type="text" name="nama_pelanggan" placeholder="Input Nama Pelanggan" class="w-full py-2 px-4 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400">
            </div>
            <div class="mt-2">
              <label class="font-bold">Alamat Pelanggan :</label>
              <input type="text" name="alamat_pelanggan" placeholder="Input Alamat Pelanggan" class="w-full py-2 px-4 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400">
            </div>
            <div class="mt-2">
              <label class="font-bold">NO. Handphone :</label>
              <input type="number" name="nomor_handphone" placeholder="Input Nomor Handphone" class="w-full py-2 px-4 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400">
            </div>
            <div class="mt-2 ">
              <label class="font-bold">Unit Layanan :</label>
              <select name="unit_layanan" class="w-full py-2 px-4 mt-2 border border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400">
                {{#each layanan}}
                  <option>{{nama}}</option>
                {{/each}}
              </select>
            </div>
            <div class="mt-2 ">
              <label class="font-bold">Jenis Laporan :</label>
              <select name="jenis_laporan" class="w-full py-2 px-4 mt-2 border border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400">
                {{#each laporan}}
                  <option>{{nama}}</option>
                {{/each}}
              </select>
            </div>
            <div class="mt-2">
              <label class="font-bold">Waktu Laporan :</label>
              <input type="text" name="waktu_laporan" value="{{waktu}}" class="w-full py-2 px-4 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400" readonly>
            </div>
            <div class="flex justify-center mt-4">
              <input type="submit" class="py-1 px-4 bg-blue-500 hover:bg-blue-600 rounded shadow-md text-white font-bold focus:outline-none" value="Tambah">
            </div>
          </form>

        </div>

      </div>

    </div>
    <!-- End Content  -->

    

