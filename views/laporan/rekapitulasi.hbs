<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="assets/favicon.jpg"  type="image/jpg">
    <!-- Bootstrap CSS -->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous"> -->
    <!-- <link rel="stylesheet" href="assets/css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="assets/css/tailwindcss/style.css">
    <link rel="stylesheet" href="assets/css/template.css">
    
    <title>{{title}}</title>
  </head>
  <body class="flex">
    <!-- Sidebar -->
    <div class="flex-2 bg-grad-based h-screen hidden md:block" id="sidebar">
      <!-- Side Header -->
      <div class="flex justify-center py-4 px-1">
        <p class="font-extrabold text-white">PLN ALERT</p>
        <div class="divide-y-2 divide-x-4"></div>
      </div>
      <div class="p-1">
        <!-- Side Menu -->
        <div class="flex flex-col">
          <a href="{{base_url}}" class="p-2 rounded font-medium text-white hover:bg-white hover:text-black flex items-center mt-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Input Data Laporan
          </a>
          <a href="{{base_url}}Monitoring_Laporan" class="p-2 rounded font-medium text-white hover:bg-white hover:text-black flex items-center mt-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
            </svg>
            Monitoring Laporan
          </a>
          <a href="{{base_url}}Rekapitulasi_Laporan" class="p-2 rounded font-medium text-white hover:bg-white hover:text-black flex items-center mt-1 active">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
            </svg>
            Rekapitulasi Laporan</a>
          <a href="{{base_url}}Pengaturan" class="p-2 rounded font-medium text-white hover:bg-white hover:text-black flex items-center mt-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Pengaturan</a>
          <a href="{{base_url}}Whatsapp" class="p-2 rounded font-medium text-white hover:bg-white hover:text-black flex items-center mt-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
            </svg>
            Aktifasi Whatsapp</a>
        </div>
      </div>
    </div>
    
    <!-- Content -->
    <div class="flex-8 bg-gray-200 h-screen overflow-y-auto">
      <!-- Navbar Content -->
      <div class="flex justify-between items-center bg-white shadow p-4 sticky top-0 left-0 right-0">
        <a href="javascript:void(0)" class="flex flex-col" id="togle-nav">
          <span class="w-4 line-h-nav bg-black rounded-lg"></span>
          <span class="w-4 line-h-nav bg-black rounded-lg my-1"></span>
          <span class="w-2 line-h-nav bg-black rounded-lg"></span>
        </a>
        <a onclick="return confirm('Apakah Anda Yakin Ingin Log Out?')" href="{{base_url}}Auth/logout">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
        </a>
      </div>
      <!-- Content Body -->
      <div class="m-5">
        <!-- Head Body -->
        <p class="font-bold text-xl text-gray-700">REKAPITULASI LAPORAN</p>
        <!-- Body Body -->
        <div class="bg-white rounded mt-5 p-4 shadow-md overflow-x-scroll">
          <div class="flex flex-col mt-5 overflow-x-auto">
            {{!-- Table Head --}}
            <div class="flex flex-row flex-nowrap text-center font-bold text-white">
              <div class="py-2 w-10 bg-gray-600" style="min-width: 2.5rem;">NO</div>
                <div class="py-2 w-32 bg-gray-600" style="min-width: 8rem;">UNIT</div>
                <div class="py-2 w-44 bg-gray-600" style="min-width: 11rem;">WAKTU LAPORAN</div>
                <div class="py-2 w-52 bg-gray-600" style="min-width: 13rem;">NAMA PELANGGAN</div>
                <div class="py-2 w-40 bg-gray-600" style="min-width: 10rem;">NO. HANDPHONE</div>
                <div class="py-2 w-52 bg-gray-600" style="min-width: 13rem;">JENIS LAPORAN</div>
                <div class="py-2 w-44 bg-gray-600" style="min-width: 11rem;">RECOVERY TIME</div>
                <div class="py-2 w-10 bg-gray-600"style="min-width: 2.5rem;">IND</div>
            </div>
            {{!-- Body --}}
            <div class="flex flex-col">
              {{#each data}}
              <div class="flex border-black text-center text-sm text-black">
                <div class="py-2 w-10 border-r border-b border-l border-gray-600" style="min-width: 2.5rem;">{{urut @index}}</div>
                <div class="py-2 w-32 border-r border-b border-gray-600" style="min-width: 8rem;">{{unit_layanan}}</div>
                <div class="py-2 w-44 border-r border-b border-gray-600" style="min-width: 11rem;">{{datetime create_at "YYYY-MM-DD HH:mm:ss"}}</div>
                <div class="py-2 w-52 border-r border-b border-gray-600" style="min-width: 13rem;">{{nama_pelanggan}}</div>
                <div class="py-2 w-40 border-r border-b border-gray-600" style="min-width: 10rem;">{{nomor_handphone}}</div>
                <div class="py-2 w-52 border-r border-b border-gray-600" style="min-width: 13rem;">{{jenis_laporan}}</div>
                <div class="py-2 w-44 border-r border-b border-gray-600" style="min-width: 11rem;">{{datetime update_at "YYYY-MM-DD HH:mm:ss"}}</div>
                <div class="py-2 w-10 border-r border-b border-gray-600"style="min-width: 2.5rem;">
                  {{#if (ind 200 status)}}
                  <span class="ind bg-gray-500"></span>
                  {{/if}}
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        </div>

        
        
      </div>

    </div>
    <!-- End Content  -->

    {{!-- Modal --}}
    <div class="fixed w-full h-full flex items-center justify-center hidden" id="modal_tambah" style="background-color: rgba(0,0,0,0.2);">
        {{!-- Modal Content--}}
        <div class="w-full md:w-1/2 mx-3 md:mx-0 bg-white rounded-xl overflow-x-hidden shadow-md">
          {{!-- Header Modal --}}
          <div class="w-full p-4 text-lg flex items-center justify-between border-b font-bold">
            Form Tambah 
            <a href="javascript:void(0)" class="rounded-full hover:bg-gray-200 p-1" id="close_tambah">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 " fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </a>
          </div>
          {{!-- Body Modal --}}
          <form action="{{base_url}}Pengaturan/store" method="POST">
          <div class="p-4">
              <div>
                <label class="font-bold">Nomor Handphone :</label>
                <input type="number" name="nomor_handphone" placeholder="Input Nomor Handphone" class="w-full py-2 px-4 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400">
              </div>
              <div class="mt-2">
                <label class="font-bold">Nama Lengkap :</label>
                <input type="text" name="nama" placeholder="Input Nama Lengkap" class="w-full py-2 px-4 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400">
              </div>
              <div class="mt-2 ">
                <label class="font-bold">Jabatan & Level :</label>
                <select name="role" class="w-full py-2 px-4 mt-2 border border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400">
                  {{#each role}}
                    <option value="{{level}}">{{jabatan}}</option>
                  {{/each}}
                </select>
                {{!-- <input type="text" id="nomor_handphone" placeholder="Enter Your Phone Number" class="w-full py-2 px-4 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400"> --}}
              </div>
          </div>
          {{!-- Footer Modal --}}
          <div class="border-t p-4 flex justify-end">
            <input type="submit" class="py-1 px-4 bg-blue-500 hover:bg-blue-600 rounded shadow-md text-white font-bold focus:outline-none" value="Tambah">
          </div>
          </form>
        {{!-- End Modal Content--}}
        </div>
    </div>
    {{!-- End Model --}}

    {{!-- Modal Update --}}
    <div class="fixed top-0 left-0 right-0 bottom-0 w-full h-full flex items-center justify-center hidden" id="modal_update" style="background-color: rgba(0,0,0,0.2);">
        {{!-- Modal Content--}}
        <div class="w-full md:w-1/2 mx-3 md:mx-0 bg-white rounded-xl overflow-x-hidden shadow-md">
          {{!-- Header Modal --}}
          <div class="w-full p-4 text-lg flex items-center justify-between border-b font-bold">
            Form Update 
            <a href="javascript:void(0)" class="rounded-full hover:bg-gray-200 p-1" id="close_update">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 " fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </a>
          </div>
          {{!-- Body Modal --}}
          <form action="{{base_url}}Pengaturan/update" method="POST">
          <div class="p-4">
            <input type="hidden" name="id_pengaturan" id="id">
              <div>
                <label class="font-bold">Nomor Handphone :</label>
                <input type="number" name="nomor_handphone" id="nomor_handphone" placeholder="Input Nomor Handphone" class="w-full py-2 px-4 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400">
              </div>
              <div class="mt-2">
                <label class="font-bold">Nama Lengkap :</label>
                <input type="text" name="nama" id="nama" placeholder="Input Nama Lengkap" class="w-full py-2 px-4 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400">
              </div>
              <div class="mt-2 ">
                <label class="font-bold">Jabatan & Level :</label>
                <select name="role" id="role" class="w-full py-2 px-4 mt-2 border border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400">
                  {{#each role}}
                    <option value="{{level}}">{{jabatan}}</option>
                  {{/each}}
                </select>
                {{!-- <input type="text" id="nomor_handphone" placeholder="Enter Your Phone Number" class="w-full py-2 px-4 mt-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-400"> --}}
              </div>
          </div>
          {{!-- Footer Modal --}}
          <div class="border-t p-4 flex justify-end">
            <input type="submit" class="py-1 px-4 bg-blue-500 hover:bg-blue-600 rounded shadow-md text-white font-bold focus:outline-none" value="Update">
          </div>
          </form>
        {{!-- End Modal Content--}}
        </div>
    </div>
    {{!-- End Model Update--}}

